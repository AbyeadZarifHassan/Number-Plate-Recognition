import cv2
import numpy as np
import pytesseract
from PIL import Image

class LicensePlateDetector:
    """
    A modular class for License Plate Recognition using classical 
    Computer Vision and Tesseract OCR.
    """
    def __init__(self, lang='ben', min_area=4000):
        self.lang = lang
        self.min_area = min_area
        self.kernel = cv2.getStructuringElement(cv2.MORPH_RECT, (17, 7))

    def preprocess(self, image):
        """Enhance image quality and isolate edges."""
        gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
        gray = cv2.equalizeHist(gray)
        blurred = cv2.GaussianBlur(gray, (5, 5), 0)
        edges = cv2.Canny(blurred, 50, 150)
        return cv2.morphologyEx(edges, cv2.MORPH_CLOSE, self.kernel)

    def find_candidates(self, morph_img):
        """Identify potential rectangular regions for plates."""
        contours, _ = cv2.findContours(morph_img, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
        candidates = []
        for cnt in contours:
            x, y, w, h = cv2.boundingRect(cnt)
            aspect_ratio = w / h
            # Engineering Heuristics for plate shapes
            if 2.0 < aspect_ratio < 6.0 and (w * h) > self.min_area:
                candidates.append((x, y, w, h))
        return sorted(candidates, key=lambda b: b[2]*b[3], reverse=True)

    def extract_text(self, image, coords):
        """Apply OCR to the specific Region of Interest (ROI)."""
        x, y, w, h = coords
        roi = image[y:y+h, x:x+w]
        roi_gray = cv2.cvtColor(roi, cv2.COLOR_BGR2GRAY)
        _, thresh = cv2.threshold(roi_gray, 0, 255, cv2.THRESH_BINARY + cv2.THRESH_OTSU)
        
        # Using Tesseract via PIL
        text = pytesseract.image_to_string(thresh, lang=self.lang).strip()
        return text, thresh

# --- Main Execution Block ---
if __name__ == "__main__":
    detector = LicensePlateDetector(lang='ben')
    img = cv2.imread("Licence.jpeg")
    
    if img is not None:
        processed = detector.preprocess(img)
        rects = detector.find_candidates(processed)
        
        for rect in rects:
            text, plate_img = detector.extract_text(img, rect)
            if len(text) > 3:
                print(f"âœ… Detection Success: {text}")
                break
